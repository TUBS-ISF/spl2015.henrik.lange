package learning_program;

import java.util.ArrayList;

public class profile {
	private int id; // indetification of a user
	private String username; // choosen username
	private int points; // scored points
	private ArrayList<int> theme; // store the ids of the choosen themes

	public profile(int id, String username) {
		this.id = id;
		this.username = username;
	}

	/**
	 * Return the userid
	 * 
	 * @return int id
	 */
	int getId() {
		return id;
	}

	/**
	 * Return the user name
	 * 
	 * @return String username
	 */
	String getUsername() {
		return username;
	}

	/**
	 * Change the username
	 * 
	 * @param username
	 */
	void setUsername(String username) {
		this.username = username;
	}

	/**
	 * add points
	 * @param points
	 */
	void addPoints(int points) {
		this.points = +points;
	}
	/**
	 * subtract points
	 * @param points
	 */
	void subPoints(int points) {
		this.points = -points;
	}

}
